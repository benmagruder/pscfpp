#!/usr/bin/env python

import sys
from pscfpp.make import *

processor = 'nvcc -M'
source = sys.argv[-1]
options = ''
alldeps = ''
blddir = ''
srcdir = ''
for arg in sys.argv[1:-1]:
   if arg[:2] == '-A':
      alldeps += ' ' + arg[2:]   
   elif arg[:2] == '-B':
      blddir += arg[2:]   
   elif arg[:2] == '-S':
      srcdir += arg[2:]   
   else:
      options += ' ' + arg

createDependencyFileCuda(processor, options, source, srcdir, blddir, alldeps)
