BLD_DIR_REL =../../..
include $(BLD_DIR_REL)/config.mk
include $(SRC_DIR)/pspc/include.mk
include $(SRC_DIR)/pspc/tests/sweep/sources.mk

TEST=pspc/tests/sweep/Test

all: $(pspc_tests_sweep_OBJS) $(BLD_DIR)/$(TEST)

includes:
	@echo $(INCLUDES)

libs:
	@echo $(LIBS)

run: $(pspc_tests_sweep_OBJS) $(BLD_DIR)/$(TEST)
	$(BLD_DIR)/$(TEST) $(SRC_DIR)/pspc/tests/ 
#	@echo `grep failed log` ", "\
#              `grep successful log` "in pspc/tests/sweep/log" > count
#	@cat count

run-quiet: $(pspc_tests_sweep_OBJS) $(BLD_DIR)/$(TEST)
	$(BLD_DIR)/$(TEST) $(SRC_DIR)/pspc/tests/  > log
	@echo `grep failed log` ", "\
              `grep successful log` "in pspc/tests/sweep/log" > count
	@cat count

clean-outputs:
	rm -f log count 
	find out -type f \( ! -iname ".*" \) -exec rm -f {} \;

clean:
	rm -f $(pspc_tests_sweep_OBJS) $(pspc_tests_sweep_OBJS:.o=.d)
	rm -f $(BLD_DIR)/$(TEST) $(BLD_DIR)/$(TEST).d
	$(MAKE) clean-outputs

-include $(pspc_tests_sweep_OBJS:.o=.d)
-include $(pspc_tests_sweep_OBJS:.o=.d)
